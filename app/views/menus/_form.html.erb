    <div class="form-group">
      <h4>Item Name:</h4>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <h4>Item Price:</h4>
      <%= f.text_field :price %>
    </div>
    <div class="actions">
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        <i class="icon-ok icon-white"></i> Save
      <% end %>
    </div>
