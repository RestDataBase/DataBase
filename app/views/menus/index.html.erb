<p id="notice"><%= notice %></p>

<h1 class="text-center">Menu List</h1>

<div class="text-center">
  <%= link_to 'New Menu', new_menu_path, class:'btn btn-success' %>
</div>

<br>

<div class="menu-container centered">
<table class="table">
  <thead>
    <tr>
      <th>Item name</th>
      <th>Item price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.item_name %></td>
        <td><%= menu.item_price %></td>
        <td><%= link_to 'Detail', menu, class:'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_menu_path(menu), class:'btn btn-success' %></td>
        <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
