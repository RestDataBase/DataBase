<p id="notice"><%= notice %></p>

<h1>Listing Restaurants</h1>

<table class="restaurant_table">
  <thead class="restaurant_header">
    <tr class = "restaurant_row">
      <th>Name</th>
      <!--
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Phone</th>
      -->
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr class="<%= cycle('odd_line', 'even_line') %>">
        <td><%= restaurant.name %></td>
        <!--
        <td><%= restaurant.street %></td>
        <td><%= restaurant.city %></td>
        <td><%= restaurant.state %></td>
        <td><%= restaurant.zip %></td>
        <td><%= restaurant.phone %></td>
        -->
        <td><%= restaurant.website.empty? ? 'N/A' : restaurant.website %></td>
        <td><%= link_to 'Details', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Delete', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

