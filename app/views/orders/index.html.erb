<p id="notice"><%= notice %></p>

<h1 class="text-center">All Orders</h1>

<div class="text-center">
  <%= link_to 'New Order', new_order_path, class:'btn btn-success' %>
</div>

<br>

<body>
  <div class="order-container centered">
  <table class="table">
    <thead>
      <tr>
        <th>Customer</th>
        <th>Order detail</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr >
          <!--<td><%= order.customer %></td>-->
          <td><%= Customer.find(order.customer).fullName %></td>
          <td><%= order.order_detail %></td>
          <td><%= link_to 'Detail', order, class:'btn btn-primary' %></td>
          <td><%= link_to 'Edit', edit_order_path(order), class:'btn btn-success' %></td>
          <td><%= link_to 'Delete', order, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger'%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</body>

<br>
