<h1>Listing Orders</h1>

<body>
  <table class="table">
    <thead>
      <tr>
        <th>Customer</th>
        <th>Order detail</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr class="<%= cycle("info", "success") %>">
          <!--<td><%= order.customer %></td>-->
          <td><%= Customer.find(order.customer).fullName %></td>
          <td><%= order.order_detail %></td>
          <td><%= link_to 'Show', order, class:'btn btn-primary' %></td>
          <td><%= link_to 'Edit', edit_order_path(order), class:'btn btn-success' %></td>
          <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger'%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</body>

