<p id="notice"><%= notice %></p>

<h1 class="text-center">All Reservations</h1>

<div class="text-center">
  <%= link_to 'New Reservation', new_reservation_path, class:'btn btn-success' %>
</div>

<br>

<body>
  <div class="reservation-container centered">
  <table class="table">
    <thead>
      <tr>
        <th>Customer</th>
        <th>Date</th>
        <th>Time</th>
        <th>Party</th>
        <th>Request</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @reservations.each do |reservation| %>

        <tr>
          <td><%= Customer.find(reservation.customer).fullName %></td>
           <td><%= reservation.date %></td>
          <td><%= reservation.time %></td>
          <td><%= reservation.party %></td>
          <td><%= reservation.request %></td>
          <td><%= link_to 'Detail', reservation, class:'btn btn-primary' %></td>
          <td><%= link_to 'Edit', edit_reservation_path(reservation), class:'btn btn-success' %></td>
          <td><%= link_to 'Delete', reservation, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>


        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</body>

<br>
