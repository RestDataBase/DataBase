<p id="notice"><%= notice %></p>

<h1 class="text-center">All Customers</h1>

<div class="text-center">
  <%= link_to 'New Customer', new_customer_path, class:'btn btn-success' %>
</div>

<br>

<body>
  <div class="customer-container centered">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.fname %> <%= customer.lname %></td>
          <td><%= customer.street %> <%= customer.city %>, <%= customer.state %> <%= customer.zip %></td>
          <td><%= customer.phone %></td>
          <td><%= customer.email %></td>
          <td><%= link_to 'Detail', customer, class: 'btn btn-primary' %></td>
          <td><%= link_to 'Edit', edit_customer_path(customer), class:'btn btn-success' %></td>
          <td><%= link_to 'Delete', customer, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</body>
<br>
